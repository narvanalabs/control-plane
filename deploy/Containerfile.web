# Narvana Control Plane - Web UI
FROM docker.io/library/golang:1.24-alpine AS builder

ARG VERSION=dev
ARG TARGETARCH

WORKDIR /build

RUN apk add --no-cache git curl

# Install templ
RUN go install github.com/a-h/templ/cmd/templ@latest

# Install tailwindcss standalone binary (architecture-aware)
RUN TWARCH=$([ "$TARGETARCH" = "arm64" ] && echo "arm64" || echo "x64") && \
    curl -sL "https://github.com/tailwindlabs/tailwindcss/releases/latest/download/tailwindcss-linux-${TWARCH}" -o /usr/local/bin/tailwindcss && \
    chmod +x /usr/local/bin/tailwindcss

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Generate templates and CSS
RUN cd web && templ generate
RUN cd web && tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --minify

RUN CGO_ENABLED=0 GOOS=linux go build \
    -ldflags="-s -w -X main.Version=${VERSION}" \
    -o /web ./cmd/web

# Runtime
FROM docker.io/library/alpine:3.20

RUN apk add --no-cache ca-certificates curl

COPY --from=builder /web /usr/local/bin/web

EXPOSE 8090

USER nobody:nobody

ENTRYPOINT ["/usr/local/bin/web"]
