{
  inputs = {
    nixpkgs.url = "github:NixOS/nixpkgs/nixos-unstable";
    flake-utils.url = "github:numtide/flake-utils";
  };

  outputs = { self, nixpkgs, flake-utils }:
    flake-utils.lib.eachDefaultSystem (system:
      let
        pkgs = nixpkgs.legacyPackages.${system};
      in
      {
        packages.default = pkgs.buildGoModule {
          pname = "{{ .AppName }}";
          version = "0.1.0";
          
          src = ./.;
          
          {{- if .Config.EntryPoint }}
          subPackages = [ "{{ .Config.EntryPoint }}" ];
          {{- else if .EntryPoint }}
          subPackages = [ "{{ .EntryPoint }}" ];
          {{- end }}
          
          # Use null vendorHash - this skips hash verification entirely
          # Works with --impure flag and allows Go to download dependencies
          vendorHash = null;
          
          # Delete any existing vendor directory to avoid stale/incomplete vendor issues
          deleteVendor = true;
          
          # Force Go to use module mode and ignore any vendor directory
          # Also enable GOPROXY to allow downloading dependencies
          preBuild = ''
            rm -rf vendor 2>/dev/null || true
            export GOFLAGS="-mod=mod"
            export GOPROXY="https://proxy.golang.org,direct"
          '';
          
          # Allow Go to download newer toolchain if required
          env.GOTOOLCHAIN = "auto";
          env.CGO_ENABLED = "0";
          
          # Disable sandbox to avoid /homeless-shelter purity check
          __noChroot = true;
          
          ldflags = [
            "-s"
            "-w"
            "-X main.version=0.1.0"
          ];
          
          # Allow references to Go toolchain in output (needed for impure builds)
          allowGoReference = true;
          
          meta = with pkgs.lib; {
            description = "{{ .AppName }}";
          };
        };
        
        devShells.default = pkgs.mkShell {
          buildInputs = with pkgs; [ go gopls gotools ];
        };
      }
    );
}
