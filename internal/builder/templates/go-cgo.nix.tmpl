{
  description = "Nix flake for {{ .AppName }} (with CGO)";

  inputs = {
    nixpkgs.url = "github:NixOS/nixpkgs/nixos-unstable";
    flake-utils.url = "github:numtide/flake-utils";
  };

  outputs = { self, nixpkgs, flake-utils }:
    flake-utils.lib.eachDefaultSystem (system:
      let
        pkgs = nixpkgs.legacyPackages.${system};
        {{- if .Config.GoVersion }}
        goVersion = "{{ .Config.GoVersion }}";
        {{- else if .Version }}
        goVersion = "{{ .Version }}";
        {{- else }}
        goVersion = "1.21";
        {{- end }}
        
        # Select Go package based on version
        go = pkgs.go_1_21;
      in
      {
        packages.default = pkgs.buildGoModule {
          pname = "{{ .AppName }}";
          version = "0.1.0";
          
          src = ./.;
          
          {{- if .Config.WorkspaceModule }}
          # Build specific module in workspace
          # **Validates: Requirements 22.3**
          subPackages = [ "{{ .Config.WorkspaceModule }}" ];
          {{- else if .Config.EntryPoint }}
          subPackages = [ "{{ .Config.EntryPoint }}" ];
          {{- else if .EntryPoint }}
          subPackages = [ "{{ .EntryPoint }}" ];
          {{- end }}
          
          # Vendor hash - use null to skip hash verification (works with --impure)
          vendorHash = null;
          
          # Delete any existing vendor directory to avoid stale/incomplete vendor issues
          deleteVendor = true;
          
          # Disable tests - they often require external services (databases, etc.)
          # that aren't available in the Nix sandbox
          doCheck = false;
          
          # Disable sandbox to avoid /homeless-shelter purity check
          __noChroot = true;
          
          # Allow references to Go toolchain in output (needed for impure builds)
          allowGoReference = true;
          
          # Environment variables for the build
          env.CGO_ENABLED = "1";
          env.GOTOOLCHAIN = "auto";
          {{- if .Config.IsWorkspace }}
          # Enable workspace mode
          # **Validates: Requirements 22.4**
          env.GOWORK = "on";
          {{- end }}
          
          # Common CGO dependencies
          nativeBuildInputs = with pkgs; [
            pkg-config
          ];
          
          buildInputs = with pkgs; [
            # Common C libraries that CGO projects might need
            {{- if .Config.ExtraNixPackages }}
            {{- range .Config.ExtraNixPackages }}
            {{ . }}
            {{- end }}
            {{- else }}
            # Add required C libraries here
            {{- end }}
          ];
          
          {{- if .Config.BuildTags }}
          # Build tags for conditional compilation
          # **Validates: Requirements 17.2, 17.3**
          tags = [ {{ range $i, $tag := .Config.BuildTags }}{{ if $i }} {{ end }}"{{ $tag }}"{{ end }} ];
          {{- end }}
          
          # Ldflags for Go linker
          # **Validates: Requirements 18.2, 18.4, 18.5**
          {{- if .Config.Ldflags }}
          # Custom ldflags override defaults
          ldflags = [ {{ .Config.Ldflags | formatLdflags }} ];
          {{- else }}
          # Default ldflags: strip debug info and symbols for smaller binaries
          ldflags = [
            "-s"
            "-w"
            "-X main.version={{ default "0.1.0" .Version }}"
          ];
          {{- end }}
          
          # Ensure CGO can find libraries
          # Pre-build hook: includes CGO setup and user-defined commands
          # **Validates: Requirements 21.3, 21.5**
          preBuild = ''
            rm -rf vendor 2>/dev/null || true
            export GOFLAGS="-mod=mod"
            export GOPROXY="https://proxy.golang.org,direct"
            export CGO_CFLAGS="-I${pkgs.lib.getDev pkgs.stdenv.cc.libc}/include"
            export CGO_LDFLAGS="-L${pkgs.lib.getLib pkgs.stdenv.cc.libc}/lib"
            {{- if .Config.IsWorkspace }}
            # Go workspace support
            # **Validates: Requirements 22.2, 22.4**
            export GOWORK="$PWD/go.work"
            # Sync workspace dependencies
            go work sync || true
            {{- end }}
            {{- if .Config.PreBuildCommands }}
            # User-defined pre-build commands
            {{- range .Config.PreBuildCommands }}
            {{ . }}
            {{- end }}
            {{- end }}
          '';
          
          {{- if .Config.PostBuildCommands }}
          # Post-build hook: user-defined commands to run after successful build
          # **Validates: Requirements 21.4, 21.6**
          postBuild = ''
            {{- range .Config.PostBuildCommands }}
            {{ . }}
            {{- end }}
          '';
          {{- end }}
          
          meta = with pkgs.lib; {
            description = "{{ .AppName }}";
            mainProgram = "{{ default .AppName .EntryPoint }}";
          };
        };
        
        devShells.default = pkgs.mkShell {
          buildInputs = [ go pkgs.gopls pkgs.gotools pkgs.pkg-config ];
        };
      }
    );
}
